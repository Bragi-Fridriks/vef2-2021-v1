<%- include('header') -%>

    <header class="heading heading--main">
        <h1 class="heading__title">Fræðslumyndbandaleigan</h1>
    </header>
    <main>
        <div class="list">
            <div class="list__row">
                <% categories.forEach((category)=> { %>
                    <h2 class="heading__category">
                        <%= category.title %>
                    </h2>

                    <div class="list__col">
                        <% category.videos.forEach((video)=> { %>
                            <a href="/<%= video.id %>" class="listItem">
                                <div class="listItem__poster">
                                    <img src="<%= video.poster %>" alt="">
                                </div>
                                <div class="listItem__bottom">

                                </div>
                            </a>
                            <% }) %>

                    </div>
                    <% }) %>
            </div>
        </div>
    </main>
    <%- include('footer') -%>